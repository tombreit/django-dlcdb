{
  "name": "DLCDBInventory2",
  "version": "1.0.0",
  "description": "QR code based inventory for DLCDB",
  "main": "index.js",
  "config": {
    "srcdir": ".",
    "distdir": "../static/inventory"
  },
  "scripts": {
    "preprod": "mkdir -p $npm_package_config_distdir",
    "prod": "npm-run-all scss:prod js:prod font:copy-all",
    "scss:prod": "dart-sass --load-path=node_modules --stop-on-error --style compressed $npm_package_config_srcdir/scss:$npm_package_config_distdir/css",
    "js:prod": "npm-run-all js:bundle",
    "js:bundle": "bundle-js $npm_package_config_srcdir/js/app.js --disable-beautify --out $npm_package_config_distdir/js/app.js",
    "font:copy-all": "npm-run-all font:copy-fontawesome",
    "font:copy-fontawesome": "mkdir -p $npm_package_config_distdir/fonts/fontawesome && cp node_modules/@fortawesome/fontawesome-free/webfonts/* $npm_package_config_distdir/fonts/fontawesome/"
  },
  "author": "Thomas Breitner",
  "license": "ISC",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.12.0",
    "@ttskch/select2-bootstrap4-theme": "^1.5.2",
    "bootstrap": "^4.4.1",
    "bootswatch": "^4.4.1",
    "bundle-js": "^1.0.3",
    "dart-sass": "^1.25.0",
    "jquery": "^3.4.1",
    "npm-run-all": "^4.1.5",
    "popper.js": "^1.16.1",
    "select2": "^4.1.0-rc.0"
  },
  "dependencies": {
    "npm": "^6.13.7"
  }
}
